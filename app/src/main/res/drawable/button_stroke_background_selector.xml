<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 点击 -->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/transparent" />
            <stroke android:width="1dp" android:color="@color/button_solid_bg_press" />
        </shape>
    </item>
    <!-- 不可用 -->
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/transparent" />
            <stroke android:width="1dp" android:color="@color/button_solid_bg_disable" />
        </shape>
    </item>
    <!-- 默认 -->
    <item>
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/transparent" />
            <stroke android:width="1dp" android:color="@color/button_solid_bg_normal" />
        </shape>
    </item>
</selector>
